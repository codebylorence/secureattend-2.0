<Window x:Class="BiometricDesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SecureAttend | Biometric Enrollment"
        Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#f4f4f9">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="350">
            <TextBlock Text="Fingerprint Enrollment" 
                       FontSize="20" FontWeight="Bold" 
                       Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,20"/>

           <StackPanel>
            <TextBlock Text="Employee ID:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="EmployeeIdInput"
                        FontSize="14" Padding="8" Margin="0,0,0,15"
                        ToolTip="Enter Employee ID"/>
            </StackPanel>


            <Button x:Name="ConnectBtn" 
                    Content="ðŸ”Œ Connect Device"
                    FontSize="14" Padding="8"
                    Click="ConnectBtn_Click" Margin="0,0,0,10"/>

            <Button x:Name="EnrollBtn" 
                    Content="ðŸ–ï¸ Enroll Fingerprint"
                    FontSize="14" Padding="8"
                    Click="EnrollBtn_Click" 
                    IsEnabled="False" Margin="0,0,0,10"/>

            <Button x:Name="ExitBtn"
                    Content="âŒ Exit"
                    FontSize="14" Padding="8"
                    Click="ExitBtn_Click"/>

            <TextBlock x:Name="StatusText"
                       Text="Status: Not connected"
                       FontSize="13" Foreground="Gray"
                       Margin="0,20,0,0" TextAlignment="Center" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
