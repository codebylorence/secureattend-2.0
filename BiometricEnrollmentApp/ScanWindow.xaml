<Window x:Class="BiometricEnrollmentApp.ScanWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fingerprint Scan" 
        Height="650" 
        Width="850"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="#F5F5F5">

    <Border Padding="25" Background="White" Margin="15" CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <!-- Clock and Date at top -->
                <StackPanel HorizontalAlignment="Right" Margin="0,0,0,10">
                    <TextBlock x:Name="ClockText" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="white"
                               HorizontalAlignment="Right"/>
                    <TextBlock x:Name="DateText" 
                               FontSize="13" 
                               Foreground="#666"
                               HorizontalAlignment="Right"
                               Margin="0,2,0,0"/>
                </StackPanel>
                
                <!-- Title -->
                <TextBlock Text="Fingerprint Attendance" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="#1E3A8A"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Place your finger on the scanner" 
                           FontSize="16" 
                           Foreground="#666"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- CONTENT AREA -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- PHOTO PANEL -->
                <Border Grid.Column="0"
                        Background="#F0F0F0" 
                        CornerRadius="12" 
                        BorderBrush="#CCCCCC" 
                        BorderThickness="2"
                        VerticalAlignment="Top"
                        Height="300"
                        ClipToBounds="True">

                    <Grid>
                        <Image x:Name="PhotoImage" 
                               Stretch="UniformToFill"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                        <TextBlock x:Name="PhotoPlaceholderText" 
                                   Text="PHOTO" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   FontSize="30"
                                   FontWeight="Bold" 
                                   Foreground="#999"/>
                    </Grid>

                </Border>

                <!-- RIGHT SIDE DETAILS -->
                <Grid Grid.Column="2" VerticalAlignment="Top">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- EMPLOYEE NAME -->
                    <Border Grid.Row="0"
                            Background="#E3F2FD" 
                            Padding="15" 
                            CornerRadius="10"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Employee Name" 
                                       FontSize="13" 
                                       Foreground="#666" 
                                       FontWeight="SemiBold"/>
                            <TextBlock x:Name="NameText" 
                                       Text="Scanning..." 
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       Foreground="#1E3A8A"
                                       Margin="0,4,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- EMPLOYEE ID -->
                    <Border Grid.Row="1"
                            Background="#F5F5F5" 
                            Padding="15" 
                            CornerRadius="10"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Employee ID" 
                                       FontSize="13" 
                                       Foreground="#666" 
                                       FontWeight="SemiBold"/>
                            <TextBlock x:Name="IdText" 
                                       Text="---" 
                                       FontSize="20" 
                                       FontWeight="SemiBold"
                                       Foreground="#333"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- STATUS -->
                    <Border Grid.Row="2"
                            Background="#FFF3E0" 
                            Padding="15" 
                            CornerRadius="10"
                            Margin="0,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Status" 
                                       FontSize="13" 
                                       Foreground="#666" 
                                       FontWeight="SemiBold"/>
                            <TextBlock x:Name="StatusText" 
                                       Text="Waiting for fingerprint..." 
                                       FontSize="16"
                                       Foreground="#F57C00"
                                       TextWrapping="Wrap"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                </Grid>

            </Grid>

            <!-- FOOTER -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">

                <Button x:Name="CancelButton" 
                        Content="Cancel" 
                        Width="120" Height="42"
                        Background="#E0E0E0"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="CancelButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8" 
                                    Padding="12,8">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>

        </Grid>
    </Border>
</Window>
