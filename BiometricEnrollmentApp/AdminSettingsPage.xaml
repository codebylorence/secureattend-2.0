<Page x:Class="BiometricEnrollmentApp.AdminSettingsPage" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Admin - Settings"
      Background="#F8FAFC"
      FontFamily="Segoe UI">

    <Page.Resources>
        <SolidColorBrush x:Key="TextMainBrush" Color="#1E293B"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="#64748B"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#FFFFFF"/>
        
        <DropShadowEffect x:Key="PanelShadow" BlurRadius="15" ShadowDepth="2" Direction="270" Color="#000000" Opacity="0.04"/>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#334155"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F5F9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <TextBlock Text="System Settings" 
                           FontSize="26" FontWeight="Bold" 
                           Foreground="{StaticResource TextMainBrush}"
                           Margin="0,0,0,4"/>
                <TextBlock Text="Configure application behaviors, database connections, and hardware preferences" 
                           FontSize="14" 
                           Foreground="{StaticResource TextMutedBrush}"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" MinWidth="400"/>
                    <ColumnDefinition Width="32"/> <ColumnDefinition Width="1*" MinWidth="400"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    
                    <Border Background="{StaticResource PanelBackground}" CornerRadius="12" Padding="24" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Effect="{StaticResource PanelShadow}" Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="ðŸŒ Server Configuration" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextMainBrush}" Margin="0,0,0,20"/>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Server URL" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,16,12" Foreground="{StaticResource TextMainBrush}"/>
                                <TextBox Grid.Row="0" Grid.Column="1" x:Name="ServerUrlTextBox" Text="http://localhost:5000" Margin="0,0,12,12" ToolTip="Enter your backend API URL"/>
                                <Button Grid.Row="0" Grid.Column="2" x:Name="TestConnectionBtn" Content="Test &amp; Save" Click="TestConnectionBtn_Click" Style="{StaticResource PrimaryButton}" Margin="0,0,0,12"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Status" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{StaticResource TextMainBrush}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" x:Name="ConnectionStatusText" Text="Not tested" Foreground="#059669" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Background="{StaticResource PanelBackground}" CornerRadius="12" Padding="24" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Effect="{StaticResource PanelShadow}" Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="ðŸ—„ï¸ Database Management" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextMainBrush}" Margin="0,0,0,20"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="Local Database Size" FontSize="12" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="DatabaseInfoText" Text="Loading..." FontWeight="Bold" Foreground="{StaticResource TextMainBrush}"/>
                                </StackPanel>
                                
                                <Button Grid.Column="1" x:Name="BackupDbBtn" Content="Backup Data" Click="BackupDbBtn_Click" Margin="0,0,12,0"/>
                                <Button Grid.Column="2" x:Name="CleanupDbBtn" Content="Cleanup Logs" Click="CleanupDbBtn_Click" Foreground="#DC2626"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Background="{StaticResource PanelBackground}" CornerRadius="12" Padding="24" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Effect="{StaticResource PanelShadow}" Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="ðŸ–¨ï¸ Hardware &amp; Devices" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextMainBrush}" Margin="0,0,0,20"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="Fingerprint Scanner Status" FontSize="12" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="DeviceStatusText" Text="Checking..." FontWeight="Bold" Foreground="{StaticResource TextMainBrush}"/>
                                </StackPanel>
                                
                                <Button Grid.Column="1" x:Name="TestDeviceBtn" Content="Test Device" Click="TestDeviceBtn_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Background="{StaticResource PanelBackground}" CornerRadius="12" Padding="24" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Effect="{StaticResource PanelShadow}">
                        <StackPanel>
                            <TextBlock Text="â„¹ï¸ System Information" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextMainBrush}" Margin="0,0,0,20"/>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Application" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,12"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="SecureAttend v1.0" FontWeight="SemiBold" Foreground="{StaticResource TextMainBrush}" Margin="0,0,0,12"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Build Date" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,12"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="BuildDateText" Text="Loading..." FontWeight="SemiBold" Foreground="{StaticResource TextMainBrush}" Margin="0,0,0,12"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Database Path" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,12"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DatabasePathText" Text="Loading..." FontWeight="SemiBold" Foreground="{StaticResource TextMainBrush}" Margin="0,0,0,12" TextWrapping="Wrap"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Last Sync" Foreground="{StaticResource TextMutedBrush}"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="LastSyncText" Text="Never" FontWeight="SemiBold" Foreground="{StaticResource TextMainBrush}"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    
                    <Border Background="{StaticResource PanelBackground}" CornerRadius="12" Padding="24" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Effect="{StaticResource PanelShadow}" Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="â±ï¸ Attendance Rules" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextMainBrush}" Margin="0,0,0,24"/>
                            
                            <StackPanel Margin="0,0,0,20">
                                <Grid Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Clock-In Grace Period" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{StaticResource TextMainBrush}"/>
                                    <TextBox Grid.Column="1" x:Name="ClockInGraceInput" Text="10" TextAlignment="Center"/>
                                </Grid>
                                <TextBlock Text="Minutes before/after scheduled time to still mark as 'Present'. E.g. If set to 10, arriving at 8:10 AM for an 8:00 AM schedule is Present. After 8:10 AM is Late." 
                                           FontSize="12" Foreground="{StaticResource TextMutedBrush}" TextWrapping="Wrap" LineHeight="18"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,20">
                                <Grid Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Clock-Out Grace Period" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{StaticResource TextMainBrush}"/>
                                    <TextBox Grid.Column="1" x:Name="ClockOutGraceInput" Text="10" TextAlignment="Center"/>
                                </Grid>
                                <TextBlock Text="Minutes after scheduled end time employees can clock out. E.g. If set to 10, employees can safely clock out until 5:10 PM for a 5:00 PM shift." 
                                           FontSize="12" Foreground="{StaticResource TextMutedBrush}" TextWrapping="Wrap" LineHeight="18"/>
                            </StackPanel>
                            
                            <StackPanel Margin="0,0,0,24">
                                <Grid Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Late Threshold (Legacy)" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{StaticResource TextMainBrush}"/>
                                    <TextBox Grid.Column="1" x:Name="LateThresholdInput" Text="15" TextAlignment="Center"/>
                                </Grid>
                                <TextBlock Text="Note: This setting is preserved for future backend logic. Currently, the Grace Period determines 'Late' status." 
                                           FontSize="12" Foreground="#9CA3AF" FontStyle="Italic" TextWrapping="Wrap" LineHeight="18"/>
                            </StackPanel>

                            <Separator Background="#E2E8F0" Margin="0,0,0,20"/>

                            <CheckBox x:Name="ClockOutConfirmationCheckBox" IsChecked="True" Margin="0,0,0,24">
                                <TextBlock Text="Show confirmation dialog before clocking out" FontWeight="SemiBold" Foreground="{StaticResource TextMainBrush}" Margin="8,0,0,0"/>
                            </CheckBox>

                            <Button x:Name="SaveAttendanceSettingsBtn" Content="Save Attendance Settings" 
                                    Click="SaveAttendanceSettingsBtn_Click" Style="{StaticResource PrimaryButton}" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{StaticResource PanelBackground}" CornerRadius="12" Padding="24" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Effect="{StaticResource PanelShadow}">
                        <StackPanel>
                            <TextBlock Text="ðŸ‘¤ Edit Admin Account" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextMainBrush}" Margin="0,0,0,24"/>
                            
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Current Username" FontWeight="SemiBold" Foreground="{StaticResource TextMainBrush}" Margin="0,0,0,6"/>
                                <TextBox x:Name="CurrentUsernameTextBox" IsReadOnly="True" Background="#F1F5F9" Foreground="#64748B"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="New Username" FontWeight="SemiBold" Foreground="{StaticResource TextMainBrush}" Margin="0,0,0,6"/>
                                <TextBox x:Name="NewUsernameTextBox" ToolTip="Enter new username (leave blank to keep current)"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="New Password" FontWeight="SemiBold" Foreground="{StaticResource TextMainBrush}" Margin="0,0,0,6"/>
                                <PasswordBox x:Name="NewPasswordBox" ToolTip="Enter new password (leave blank to keep current)"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,24">
                                <TextBlock Text="Confirm New Password" FontWeight="SemiBold" Foreground="{StaticResource TextMainBrush}" Margin="0,0,0,6"/>
                                <PasswordBox x:Name="ConfirmPasswordBox" ToolTip="Re-enter new password"/>
                            </StackPanel>
                            
                            <TextBlock Text="Note: Changes only affect the biometric app login. Web portal credentials remain unchanged." 
                                       FontSize="12" Foreground="#9CA3AF" FontStyle="Italic" TextWrapping="Wrap" LineHeight="18" Margin="0,0,0,16"/>

                            <Button x:Name="UpdateAdminAccountBtn" Content="Update Admin Account" 
                                    Click="UpdateAdminAccountBtn_Click" Style="{StaticResource PrimaryButton}" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>