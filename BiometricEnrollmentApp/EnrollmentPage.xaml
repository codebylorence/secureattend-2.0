<Page x:Class="BiometricEnrollmentApp.EnrollmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SecureAttend | Biometric Enrollment"
      Background="#f7f9fc">

    <Grid>
        <!-- Main card -->
        <Border CornerRadius="15"
                Background="White"
                Padding="30"
                Margin="20"
                BorderBrush="#cbd5e1"
                BorderThickness="2">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="ðŸ§¬ SecureAttend Enrollment"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#1e293b"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Employee Input -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,20">
                    <TextBlock Text="Employee ID:"
                               VerticalAlignment="Center"
                               Foreground="#334155"
                               Margin="0,0,8,0"/>
                    <TextBox x:Name="EmployeeIdInput"
                             Width="260"
                             Height="32"
                             FontSize="16"
                             Padding="5"
                             BorderBrush="#94a3b8"
                             BorderThickness="1.5"
                             Background="#f1f5f9"/>
                </StackPanel>

                <!-- Action buttons -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,30">
                    <Button x:Name="EnrollBtn"
                            Content="ðŸ–ï¸ Enroll Fingerprint"
                            Width="200"
                            Height="45"
                            FontSize="16"
                            Background="#10b981"
                            Foreground="White"
                            Margin="5"
                            Click="EnrollBtn_Click"
                            IsEnabled="False"/>
                    <Button x:Name="BackBtn"
                            Content="â† Back"
                            Width="140"
                            Height="45"
                            FontSize="16"
                            Background="#6b7280"
                            Foreground="White"
                            Margin="5"
                            Click="BackBtn_Click"/>
                </StackPanel>

                <!-- Fingerprint preview + status -->
                <Border Grid.Row="4"
                        CornerRadius="12"
                        Background="#f1f5f9"
                        Padding="20"
                        Margin="20,20,20,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Fingerprint preview -->
                        <Border Grid.Column="0"
                                Width="260"
                                Height="200"
                                Background="White"
                                CornerRadius="10"
                                Padding="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                BorderBrush="#e2e8f0"
                                BorderThickness="1">
                            <Image x:Name="FingerprintPreview"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Source="/Assets/fingerprint_placeholder.png"/>
                        </Border>

                        <!-- Status area -->
                        <Border Grid.Column="2"
                                CornerRadius="10"
                                Background="White"
                                Padding="20"
                                BorderBrush="#e2e8f0"
                                BorderThickness="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Stretch">
                            <TextBlock x:Name="StatusText"
                                       Text="Status: Not connected"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#1e293b"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Footer -->
                <TextBlock Grid.Row="5"
                           Text="Â© 2025 SecureAttend Systems"
                           FontSize="12"
                           Foreground="#94a3b8"
                           Margin="0,20,0,0"
                           HorizontalAlignment="Center"/>
            </Grid>
        </Border>


        <!-- Admin login overlay â€” REPLACE YOUR OLD AdminOverlay BLOCK WITH THIS -->
        <Border x:Name="AdminOverlay"
                Background="#80000000"
                Visibility="Visible"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Opacity="1">

            <Grid HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Border Background="White"
                        CornerRadius="15"
                        Padding="28"
                        Width="420"
                        BorderBrush="#E2E8F0"
                        BorderThickness="1">
                    <StackPanel>

                        <!-- Header -->
                        <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,14">
                            <TextBlock Text="Admin Login"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#1E293B"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Text="Enter your admin credentials to proceed."
                                   FontSize="13"
                                   Foreground="#475569"
                                   TextAlignment="Center"
                                   Margin="0,0,0,18"/>

                        <!-- Username -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Username"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="#334155"
                                       Margin="0,0,0,6"/>
                            <Border Background="#F8FAFC"
                                    BorderBrush="#CBD5E1"
                                    BorderThickness="1">
                                <TextBox x:Name="AdminUsername"
                                         Height="36"
                                         Padding="8"
                                         FontSize="14"
                                         Background="Transparent"
                                         BorderThickness="0"/>
                            </Border>
                        </StackPanel>

                        <!-- Password -->
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="Password"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="#334155"
                                       Margin="0,0,0,6"/>
                            <Border Background="#F8FAFC"
                                    BorderBrush="#CBD5E1"
                                    BorderThickness="1">
                                <PasswordBox x:Name="AdminPassword"
                                             Height="36"
                                             Padding="8"
                                             FontSize="14"
                                             Background="Transparent"
                                             BorderThickness="0"/>
                            </Border>
                        </StackPanel>

                        <!-- Status message (collapsed by default) -->
                        <TextBlock x:Name="AdminLoginStatus"
                                   Text="Invalid credentials"
                                   Foreground="#B91C1C"
                                   FontSize="13"
                                   TextWrapping="Wrap"
                                   Visibility="Collapsed"
                                   Margin="0,8,0,0"/>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,18,0,0">
                            <Button x:Name="AdminCancelBtn"
                                    Content="Cancel"
                                    Width="100"
                                    Height="36"
                                    FontWeight="SemiBold"
                                    Background="#E2E8F0"
                                    Foreground="#1E293B"
                                    BorderBrush="#CBD5E1"
                                    BorderThickness="1"
                                    Click="AdminCancelBtn_Click"/>
                            <Button x:Name="AdminLoginBtn"
                                    Content="Login"
                                    Width="100"
                                    Height="36"
                                    FontWeight="SemiBold"
                                    Margin="8,0,0,0"
                                    Background="#2563EB"
                                    Foreground="White"
                                    BorderBrush="#2563EB"
                                    BorderThickness="1"
                                    Click="AdminLoginBtn_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Fade-in animation for the overlay -->
            <Border.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0"
                                    To="1"
                                             Duration="0:0:0.28"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>
        </Border>

    </Grid>
</Page>
