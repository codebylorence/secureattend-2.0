<Page x:Class="BiometricEnrollmentApp.EnrollmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SecureAttend | Biometric Enrollment"
      Background="#f7f9fc">

    <Grid>
        <!-- Main card -->
        <Border CornerRadius="15"
                Background="White"
                Padding="30"
                Margin="20"
                BorderBrush="#cbd5e1"
                BorderThickness="2">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="ðŸ§¬ SecureAttend Enrollment"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#1e293b"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Employee Input -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,20">
                    <TextBlock Text="Employee ID:" VerticalAlignment="Center" Foreground="#334155" Margin="0,0,8,0"/>
                    <TextBox x:Name="EmployeeIdInput"
                             Width="260"
                             Height="32"
                             FontSize="16"
                             Padding="5"
                             BorderBrush="#94a3b8"
                             BorderThickness="1.5"
                             Background="#f1f5f9"/>
                </StackPanel>

                <!-- Action buttons -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,30">
                    <Button x:Name="ConnectBtn"
                            Content="ðŸ”Œ Connect Device"
                            Width="180"
                            Height="45"
                            FontSize="16"
                            Background="#2563eb"
                            Foreground="White"
                            Margin="5"
                            Click="ConnectBtn_Click"
                            IsEnabled="False"/>
                    <Button x:Name="EnrollBtn"
                            Content="ðŸ–ï¸ Enroll Fingerprint"
                            Width="200"
                            Height="45"
                            FontSize="16"
                            Background="#10b981"
                            Foreground="White"
                            Margin="5"
                            Click="EnrollBtn_Click"
                            IsEnabled="False"/>
                    <Button x:Name="BackBtn"
                            Content="â† Back"
                            Width="140"
                            Height="45"
                            FontSize="16"
                            Background="#6b7280"
                            Foreground="White"
                            Margin="5"
                            Click="BackBtn_Click"/>
                </StackPanel>

                <!-- Fingerprint preview + status -->
                <Border Grid.Row="4"
                        CornerRadius="12"
                        Background="#f1f5f9"
                        Padding="20"
                        Margin="20,20,20,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Fingerprint preview -->
                        <Border Grid.Column="0"
                                Width="260"
                                Height="200"
                                Background="White"
                                CornerRadius="10"
                                Padding="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                BorderBrush="#e2e8f0"
                                BorderThickness="1">
                            <Image x:Name="FingerprintPreview"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Source="/Assets/fingerprint_placeholder.png"/>
                        </Border>

                        <!-- Status area -->
                        <Border Grid.Column="2"
                                CornerRadius="10"
                                Background="White"
                                Padding="20"
                                BorderBrush="#e2e8f0"
                                BorderThickness="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Stretch">
                            <TextBlock x:Name="StatusText"
                                       Text="Status: Not connected"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#1e293b"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Footer -->
                <TextBlock Grid.Row="5"
                           Text="Â© 2025 SecureAttend Systems"
                           FontSize="12"
                           Foreground="#94a3b8"
                           Margin="0,20,0,0"
                           HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Admin Login Overlay (top-level in same Page Grid so it blocks the UI) -->
        <Border x:Name="AdminOverlay"
                Background="#88000000"  
                Visibility="Visible"  
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Background="White" CornerRadius="10" Padding="20" Width="420">
                    <StackPanel>
                        <TextBlock Text="Admin Login" FontSize="20" FontWeight="Bold" Margin="0,0,0,8"/>
                        <TextBlock Text="Enter admin username and password to continue." FontSize="12" Foreground="#475569" Margin="0,0,0,12"/>
                        
                        <TextBlock Text="Username" FontSize="13" Margin="0,6,0,2"/>
                        <TextBox x:Name="AdminUsername" Height="32"/>

                        <TextBlock Text="Password" FontSize="13" Margin="0,8,0,2"/>
                        <PasswordBox x:Name="AdminPassword" Height="32"/>

                        <TextBlock x:Name="AdminLoginStatus" Foreground="Red" Margin="0,8,0,0" Visibility="Collapsed"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                            <Button x:Name="AdminCancelBtn" Content="Cancel" Width="90" Margin="0,0,8,0" Click="AdminCancelBtn_Click"/>
                            <Button x:Name="AdminLoginBtn" Content="Login" Width="100" Click="AdminLoginBtn_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
