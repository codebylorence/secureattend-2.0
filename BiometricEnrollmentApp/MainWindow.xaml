<Window x:Class="BiometricEnrollmentApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SecureAttend - Biometric Attendance System"
        Height="720"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#f0f0f0">
    
    <Window.Resources>
        <!-- Button Styles -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1E40AF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#6B7280"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AdminButton" TargetType="Button" BasedOn="{StaticResource NavButton}">
            <Setter Property="Background" Value="#DC2626"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B91C1C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#991B1B"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#6B7280"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EmployeeButton" TargetType="Button" BasedOn="{StaticResource NavButton}">
            <Setter Property="Background" Value="#059669"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#047857"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#065F46"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#6B7280"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Main Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Navigation -->
        <Border Grid.Row="0" Background="#1E293B" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="SecureAttend" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="Biometric Attendance System" FontSize="14" Foreground="#94A3B8" VerticalAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>

                <!-- Navigation Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Notification Indicator -->
                    <Border x:Name="NotificationIndicator" 
                            Background="#DC2626" 
                            CornerRadius="12" 
                            Padding="8,4" 
                            Margin="0,0,10,0"
                            Visibility="Collapsed"
                            ToolTip="Schedule updates available">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔔" FontSize="12" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock x:Name="NotificationCount" 
                                       Text="0" 
                                       FontSize="11" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       VerticalAlignment="Center" 
                                       Margin="4,0,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Employee Mode Button -->
                    <Button x:Name="EmployeeModeBtn" 
                            Content="Employee Mode" 
                            Style="{StaticResource EmployeeButton}"
                            Click="EmployeeModeBtn_Click"
                            ToolTip="Switch to Employee Attendance Mode"/>
                    
                    <!-- Admin Panel Button -->
                    <Button x:Name="AdminPanelBtn" 
                            Content="Admin Panel" 
                            Style="{StaticResource AdminButton}"
                            Click="AdminPanelBtn_Click"
                            ToolTip="Access Admin Functions"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Row="1">
            <!-- Employee Mode (Default View) -->
            <Grid x:Name="EmployeeMode" Visibility="Visible">
                <Frame x:Name="EmployeeFrame" NavigationUIVisibility="Hidden"/>
            </Grid>

            <!-- Admin Mode -->
            <Grid x:Name="AdminMode" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Admin Navigation -->
                <Border Grid.Row="0" Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1" Padding="20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="AttendanceBtn" 
                                Content="Attendance Logs" 
                                Style="{StaticResource NavButton}"
                                Click="AttendanceBtn_Click"/>
                        <Button x:Name="EnrollmentBtn" 
                                Content="Enrollment" 
                                Style="{StaticResource NavButton}"
                                Click="EnrollmentBtn_Click"/>
                        <Button x:Name="SettingsBtn" 
                                Content="Settings" 
                                Style="{StaticResource NavButton}"
                                Click="SettingsBtn_Click"/>
                    </StackPanel>
                </Border>

                <!-- Admin Content -->
                <Frame Grid.Row="1" x:Name="AdminFrame" NavigationUIVisibility="Hidden" Margin="20"/>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="1" 
                Background="#374151" 
                Height="30" 
                VerticalAlignment="Bottom"
                Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="StatusText" 
                           Grid.Column="0"
                           Text="Ready - Place finger on scanner" 
                           Foreground="White" 
                           FontSize="12" 
                           VerticalAlignment="Center"/>
                
                <TextBlock x:Name="ClockText" 
                           Grid.Column="1"
                           Text="00:00:00" 
                           Foreground="White" 
                           FontSize="12" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
