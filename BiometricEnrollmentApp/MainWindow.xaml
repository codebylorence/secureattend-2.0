<Window x:Class="BiometricEnrollmentApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SecureAttend - Biometric Attendance System"
        Height="720"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F8FAFC">
    
    <Window.Resources>
        <DropShadowEffect x:Key="HeaderShadow" BlurRadius="15" ShadowDepth="3" Direction="270" Color="#000000" Opacity="0.2"/>

        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1E40AF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#64748B"/>
                                <Setter Property="Opacity" Value="0.6"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SubNavButton" TargetType="Button" BasedOn="{StaticResource NavButton}">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F5F9"/>
                    <Setter Property="Foreground" Value="#0F172A"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E2E8F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AdminButton" TargetType="Button" BasedOn="{StaticResource NavButton}">
            <Setter Property="Background" Value="#EF4444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B91C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EmployeeButton" TargetType="Button" BasedOn="{StaticResource NavButton}">
            <Setter Property="Background" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#047857"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#0F172A" Padding="24,16" Effect="{StaticResource HeaderShadow}" Panel.ZIndex="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="SecureAttend" FontSize="22" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="Biometric Attendance System" FontSize="14" Foreground="#94A3B8" VerticalAlignment="Center" Margin="12,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    
                    <Border x:Name="NotificationIndicator" 
                            Background="#EF4444" 
                            CornerRadius="14" 
                            Padding="10,4" 
                            Margin="0,0,16,0"
                            Visibility="Collapsed"
                            ToolTip="Schedule updates available">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔔" FontSize="12" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock x:Name="NotificationCount" 
                                       Text="0" 
                                       FontSize="12" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       VerticalAlignment="Center" 
                                       Margin="6,0,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <Button x:Name="EmployeeModeBtn" 
                            Content="Employee Mode" 
                            Style="{StaticResource EmployeeButton}"
                            Click="EmployeeModeBtn_Click"
                            ToolTip="Switch to Employee Attendance Mode"/>
                    
                    <Button x:Name="AdminPanelBtn" 
                            Content="Admin Panel" 
                            Style="{StaticResource AdminButton}"
                            Click="AdminPanelBtn_Click"
                            ToolTip="Access Admin Functions"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            
            <Grid x:Name="EmployeeMode" Visibility="Visible">
                <Frame x:Name="EmployeeFrame" NavigationUIVisibility="Hidden"/>
            </Grid>

            <Grid x:Name="AdminMode" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="White" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1" Padding="16" Panel.ZIndex="5">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="AttendanceBtn" 
                                Content="Attendance Logs" 
                                Style="{StaticResource SubNavButton}"
                                Click="AttendanceBtn_Click"/>
                        <Button x:Name="SchedulesBtn" 
                                Content="Schedules" 
                                Style="{StaticResource SubNavButton}"
                                Click="SchedulesBtn_Click"/>
                        <Button x:Name="EnrollmentBtn" 
                                Content="Enrollment" 
                                Style="{StaticResource SubNavButton}"
                                Click="EnrollmentBtn_Click"/>
                        <Button x:Name="SettingsBtn" 
                                Content="Settings" 
                                Style="{StaticResource SubNavButton}"
                                Click="SettingsBtn_Click"/>
                    </StackPanel>
                </Border>

                <Frame Grid.Row="1" x:Name="AdminFrame" NavigationUIVisibility="Hidden"/>
            </Grid>
        </Grid>

        <Border Grid.Row="2" 
                Background="#1E293B" 
                Padding="24,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="StatusText" 
                           Grid.Column="0"
                           Text="Admin Mode - Full system access" 
                           Foreground="#94A3B8" 
                           FontSize="12" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
                
                <TextBlock x:Name="ClockText" 
                           Grid.Column="1"
                           Text="00:00:00" 
                           Foreground="#F8FAFC" 
                           FontSize="13" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>