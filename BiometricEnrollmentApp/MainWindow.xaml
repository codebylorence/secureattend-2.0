<Window x:Class="BiometricEnrollmentApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SecureAttend | Enrollment"
        Height="350" Width="450"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="🖐️ Biometric Enrollment" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />
            
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Employee ID:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="EmployeeIdInput" Width="200"/>
            </StackPanel>

            <Button x:Name="ConnectBtn" Content="🔌 Connect Device" Margin="0,20,0,0" Click="ConnectBtn_Click"/>
            <Button x:Name="EnrollBtn" Content="🧬 Enroll Fingerprint" Margin="0,10,0,0" Click="EnrollBtn_Click" IsEnabled="False"/>
            
            <TextBlock x:Name="StatusText" Margin="0,20,0,0" FontSize="14" Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Window>
