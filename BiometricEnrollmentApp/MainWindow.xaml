<Window x:Class="BiometricEnrollmentApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SecureAttend"
        Height="720"
        Width="920"
        WindowStartupLocation="CenterScreen"
        Background="#f7f9fc">
    <Grid>
        <Border Background="White" Padding="16" Margin="12" CornerRadius="10" BorderBrush="#e2e8f0" BorderThickness="1">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <TextBlock Text="🧬 SecureAttend" FontSize="20" FontWeight="Bold" Foreground="#1e293b" VerticalAlignment="Center"/>
                </StackPanel>
                <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0,12,0,0"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>
