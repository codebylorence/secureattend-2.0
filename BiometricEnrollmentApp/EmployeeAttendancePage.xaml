<Page x:Class="BiometricEnrollmentApp.EmployeeAttendancePage" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Employee Attendance"
      Background="#F8FAFC"
      FontFamily="Segoe UI">

    <Page.Resources>
        <Color x:Key="NavyBlue">#0F172A</Color>
        <Color x:Key="BlueAccent">#2563EB</Color>
        <Color x:Key="GrayBackground">#F8FAFC</Color>
        <Color x:Key="DarkText">#1E293B</Color>
        <Color x:Key="LightText">#64748B</Color>
        <Color x:Key="White">#FFFFFF</Color>
        
        <SolidColorBrush x:Key="NavyBlueBrush" Color="{StaticResource NavyBlue}"/>
        <SolidColorBrush x:Key="BlueAccentBrush" Color="{StaticResource BlueAccent}"/>
        <SolidColorBrush x:Key="GrayBackgroundBrush" Color="{StaticResource GrayBackground}"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="{StaticResource DarkText}"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="{StaticResource LightText}"/>
        <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
        
        <DropShadowEffect x:Key="CardShadow" BlurRadius="25" ShadowDepth="6" Direction="270" Color="#000000" Opacity="0.08"/>
        <DropShadowEffect x:Key="HeaderShadow" BlurRadius="10" ShadowDepth="2" Direction="270" Color="#000000" Opacity="0.2"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource NavyBlueBrush}" Effect="{StaticResource HeaderShadow}" Panel.ZIndex="10">
            <Grid Margin="24,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="SecureAttend" FontWeight="Bold" Foreground="White" FontSize="20"/>
                    <TextBlock Text=" | Kiosk Mode" Foreground="#94A3B8" FontSize="18" Margin="8,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="HeaderDateText" Text="Wednesday, Jan 08" Foreground="#94A3B8" VerticalAlignment="Center" Margin="0,0,16,0" FontSize="15" FontWeight="SemiBold"/>
                    <Border Background="#1E293B" BorderBrush="#334155" BorderThickness="1" CornerRadius="8" Padding="16,8">
                        <TextBlock x:Name="HeaderTimeText" Text="12:34 PM" FontWeight="Bold" Foreground="#60A5FA" FontSize="16"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Background="{StaticResource GrayBackgroundBrush}" Margin="24">
                
                <Border Background="White" CornerRadius="20" Effect="{StaticResource CardShadow}" 
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        BorderBrush="#E2E8F0" BorderThickness="1" Padding="48">
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="40"/> <ColumnDefinition Width="Auto" MinWidth="350"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="280" Height="280" Background="#F1F5F9" CornerRadius="20" BorderBrush="#E2E8F0" BorderThickness="2" ClipToBounds="True">
                            <Grid>
                                <Viewbox x:Name="DefaultUserIcon" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Path Fill="#CBD5E1" Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                                </Viewbox>
                                <Image x:Name="EmployeePhoto" Stretch="UniformToFill" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            
                            <Border Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="20" Padding="12,8" HorizontalAlignment="Left" Margin="0,0,0,24">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="10" Height="10" Fill="#10B981" Margin="0,0,8,0"/>
                                    <TextBlock x:Name="InstructionText" Text="Scanner Active" Foreground="{StaticResource LightTextBrush}" FontWeight="SemiBold" FontSize="13"/>
                                </StackPanel>
                            </Border>

                            <TextBlock x:Name="EmployeeNameText" 
                                       Text="Awaiting scan..." 
                                       FontSize="32" FontWeight="Bold" 
                                       Foreground="{StaticResource DarkTextBrush}" 
                                       TextWrapping="Wrap" 
                                       Visibility="Visible" 
                                       Margin="0,0,0,16" 
                                       TextAlignment="Left"/>

                            <Border x:Name="StatusPanel" Visibility="Collapsed" Background="#EFF6FF" BorderBrush="#BFDBFE" BorderThickness="1" CornerRadius="12" Padding="20" Margin="0,8,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock x:Name="StatusIcon" Grid.Row="0" Text="✅" FontSize="32" HorizontalAlignment="Left" Margin="0,0,0,8" Visibility="Collapsed"/>
                                    
                                    <TextBlock x:Name="StatusMessage" Grid.Row="1" Text="Successfully Clocked In" FontSize="20" FontWeight="Bold" Foreground="#1E3A8A" TextWrapping="Wrap" TextAlignment="Left" Margin="0,0,0,4"/>
                                    
                                    <TextBlock x:Name="StatusDetails" Grid.Row="2" Text="Enjoy your shift!" FontSize="14" Foreground="#3B82F6" TextAlignment="Left" TextWrapping="Wrap" Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                            
                        </StackPanel>
                    </Grid>
                </Border>
                
                <TextBlock x:Name="CurrentTimeText" Visibility="Collapsed"/>
                <TextBlock x:Name="CurrentDateText" Visibility="Collapsed"/>
                
            </Grid>
        </ScrollViewer>

        <Border Grid.Row="2" Background="White" BorderBrush="#E2E8F0" BorderThickness="0,1,0,0" Padding="0,12">
            <TextBlock Text="© 2026 SecureAttend Systems" HorizontalAlignment="Center" Foreground="#94A3B8" FontSize="12" FontWeight="SemiBold"/>
        </Border>
    </Grid>
</Page>