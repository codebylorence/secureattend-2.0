<Page x:Class="BiometricEnrollmentApp.AttendancePage" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Attendance"
      FontFamily="Segoe UI"
      Background="#1E293B">

    <Page.Resources>
        <!-- Modern Color Palette -->
        <Color x:Key="NavyBlue">#1E293B</Color>
        <Color x:Key="BlueAccent">#3B82F6</Color>
        <Color x:Key="LightBlue">#60A5FA</Color>
        <Color x:Key="GrayBackground">#F8FAFC</Color>
        <Color x:Key="DarkText">#1F2937</Color>
        <Color x:Key="LightText">#6B7280</Color>
        <Color x:Key="White">#FFFFFF</Color>
        
        <SolidColorBrush x:Key="NavyBlueBrush" Color="{StaticResource NavyBlue}"/>
        <SolidColorBrush x:Key="BlueAccentBrush" Color="{StaticResource BlueAccent}"/>
        <SolidColorBrush x:Key="LightBlueBrush" Color="{StaticResource LightBlue}"/>
        <SolidColorBrush x:Key="GrayBackgroundBrush" Color="{StaticResource GrayBackground}"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="{StaticResource DarkText}"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="{StaticResource LightText}"/>
        <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
        
        <DropShadowEffect x:Key="CardShadow" BlurRadius="25" ShadowDepth="8" Direction="270" Color="#000000" Opacity="0.15"/>
        <DropShadowEffect x:Key="HeaderShadow" BlurRadius="15" ShadowDepth="3" Direction="270" Color="#000000" Opacity="0.2"/>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F9FAFB"/>
                                <Setter Property="BorderBrush" Value="#D1D5DB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource BlueAccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>

    <Grid x:Name="RootGrid">
        
        <Grid x:Name="MainAttendanceDisplay" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Main Content -->
                <RowDefinition Height="Auto"/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Dark Navy Header -->
            <Border Grid.Row="0" Background="{StaticResource NavyBlueBrush}" Effect="{StaticResource HeaderShadow}">
                <Grid Margin="40,20">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Empty space for minimal design -->
                    </StackPanel>
                    
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="CurrentDateText" Text="Monday, January 24, 2026" Foreground="#94A3B8" VerticalAlignment="Center" Margin="0,0,20,0" FontSize="16"/>
                        <Border Background="{StaticResource BlueAccentBrush}" CornerRadius="8" Padding="15,8">
                            <TextBlock x:Name="CurrentTimeText" Text="09:41:00 AM" FontWeight="Bold" Foreground="White" FontSize="18"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Row="1" Background="{StaticResource GrayBackgroundBrush}" Margin="40">
                <Border Background="White" CornerRadius="20" Effect="{StaticResource CardShadow}" MaxWidth="1200" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid MinHeight="500">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="400"/> <!-- Blue Photo Section -->
                            <ColumnDefinition Width="*"/>   <!-- Gray Info Section -->
                        </Grid.ColumnDefinitions>

                        <!-- LEFT SIDE: Blue Photo Section -->
                        <Border Grid.Column="0" Background="{StaticResource BlueAccentBrush}" CornerRadius="20,0,0,20">
                            <Grid>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <!-- Employee Photo Container -->
                                    <Border Width="200" Height="200" CornerRadius="100" BorderBrush="White" BorderThickness="6" Effect="{StaticResource CardShadow}">
                                        <Grid>
                                            <Border CornerRadius="100" Background="White" ClipToBounds="True">
                                                <Grid>
                                                    <Viewbox x:Name="DefaultUserIcon" Width="100" Height="100" Opacity="0.3" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <Path Fill="{StaticResource LightTextBrush}" Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                                                    </Viewbox>
                                                    <Image x:Name="EmployeePhoto" Stretch="UniformToFill" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- Scanner Status -->
                                    <Border Background="White" CornerRadius="20" Padding="20,10" Margin="0,30,0,0" Opacity="0.95">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Ellipse Width="12" Height="12" Fill="#10B981" Margin="0,0,10,0"/>
                                            <TextBlock Text="Scanner Active" Foreground="{StaticResource DarkTextBrush}" FontWeight="SemiBold" FontSize="14"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- RIGHT SIDE: Gray Information Section -->
                        <Grid Grid.Column="1" Background="{StaticResource GrayBackgroundBrush}" Margin="50">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Employee Information and Status -->
                            <StackPanel Grid.Row="0" VerticalAlignment="Center">
                                <!-- Employee Name and ID -->
                                <TextBlock x:Name="EmployeeNameText" Text="Place your finger on the scanner" FontSize="36" FontWeight="Bold" Foreground="{StaticResource DarkTextBrush}" TextWrapping="Wrap" Visibility="Collapsed" Margin="0,0,0,30" TextAlignment="Left"/>

                                <!-- Status Panel -->
                                <Border x:Name="StatusPanel" Visibility="Collapsed" Background="White" BorderBrush="#E5E7EB" BorderThickness="2" CornerRadius="16" Padding="30" Effect="{StaticResource CardShadow}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Status Icon -->
                                        <TextBlock x:Name="StatusIcon" Grid.Row="0" Text="âœ…" FontSize="48" HorizontalAlignment="Left" Margin="0,0,0,15" Visibility="Collapsed"/>
                                        
                                        <!-- Main Status Message -->
                                        <TextBlock x:Name="StatusMessage" Grid.Row="1" Text="Clock-In Successful" FontSize="28" FontWeight="Bold" Foreground="#059669" TextWrapping="Wrap" TextAlignment="Left" Margin="0,0,0,10"/>
                                        
                                        <!-- Status Details -->
                                        <TextBlock x:Name="StatusDetails" Grid.Row="2" Text="Recorded at 09:41 AM" FontSize="18" Foreground="{StaticResource LightTextBrush}" TextAlignment="Left" TextWrapping="Wrap" Visibility="Collapsed"/>
                                    </Grid>
                                </Border>

                                <!-- Employee ID Input (Hidden by default) -->
                                <Border x:Name="EmployeeIdBorder" Visibility="Collapsed" Background="White" BorderBrush="#E5E7EB" BorderThickness="2" CornerRadius="12" Height="50" Margin="0,20,0,0">
                                    <TextBox x:Name="EmployeeIdTextBox" Text="Enter Employee ID" FontSize="16" VerticalAlignment="Center" BorderThickness="0" Margin="15,0" Foreground="{StaticResource LightTextBrush}"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2" Background="{StaticResource NavyBlueBrush}" Padding="0,15">
                <TextBlock Text="Â© 2026 SecureAttend Systems" HorizontalAlignment="Center" Foreground="#64748B" FontSize="12"/>
            </Border>
        </Grid>

        <!-- Admin Panel -->
        <Grid x:Name="AdminPanel" Visibility="Collapsed" Background="{StaticResource GrayBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,1,0">
                <Grid Margin="25">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Admin Panel" FontSize="24" FontWeight="Bold" Foreground="{StaticResource DarkTextBrush}" Margin="0,0,0,30"/>

                    <Border Grid.Row="1" Background="{StaticResource GrayBackgroundBrush}" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="10" Padding="15" Margin="0,0,0,25">
                        <StackPanel>
                            <TextBlock Text="DEVICE STATUS" FontSize="11" FontWeight="Bold" Foreground="{StaticResource LightTextBrush}"/>
                            <TextBlock x:Name="StatusTextBlock" Text="Ready to scan..." FontSize="14" Foreground="{StaticResource DarkTextBrush}" Margin="0,5,0,10" TextWrapping="Wrap"/>
                            <Separator Background="#E5E7EB" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="ClockTextBlock" Text="00:00:00" FontWeight="Bold" Foreground="{StaticResource BlueAccentBrush}"/>
                                <TextBlock Text=" â€¢ " Foreground="#E5E7EB" Margin="5,0"/>
                                <TextBlock x:Name="DateTextBlock" Text="Jan 24, 2026" Foreground="{StaticResource LightTextBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Row="2">
                        <TextBlock Text="MANAGEMENT" FontSize="11" FontWeight="Bold" Foreground="{StaticResource LightTextBrush}" Margin="0,0,0,10"/>
                        
                        <Button x:Name="GoEnrollBtn" Content="ðŸ“ Enrollment Mode" Click="GoEnrollBtn_Click" HorizontalContentAlignment="Left" Margin="0,0,0,10"/>
                        <Button x:Name="OvertimeManagementBtn" Content="â° Manage Overtime" Click="OvertimeManagementBtn_Click" HorizontalContentAlignment="Left" Margin="0,0,0,10"/>
                        <Button x:Name="RefreshBtn" Content="ðŸ”„ Refresh Data" Click="RefreshBtn_Click" HorizontalContentAlignment="Left" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="DIAGNOSTICS" FontSize="11" FontWeight="Bold" Foreground="{StaticResource LightTextBrush}" Margin="0,20,0,10"/>
                        <Button x:Name="TestClockOutBtn" Content="ðŸ§ª Test Clock-Out" Click="TestClockOutBtn_Click" HorizontalContentAlignment="Left" Margin="0,0,0,10" Background="#FFF7ED" BorderBrush="#FFEDD5"/>
                        <Button x:Name="SimpleTestBtn" Content="ðŸ” Dialog Test" Click="SimpleTestBtn_Click" HorizontalContentAlignment="Left" Margin="0,0,0,10" Background="#F3E8FF" BorderBrush="#E9D5FF"/>
                    </StackPanel>

                    <Button Grid.Row="3" x:Name="ToggleViewBtn" Content="â† Return to Kiosk Mode" Click="ToggleViewBtn_Click" Style="{StaticResource PrimaryButtonStyle}" Height="45"/>
                </Grid>
            </Border>

            <Grid Grid.Column="1" Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Attendance Log" FontSize="20" FontWeight="Bold" Foreground="{StaticResource DarkTextBrush}"/>
                    <TextBlock Text="Today's real-time scanning activity" FontSize="14" Foreground="{StaticResource LightTextBrush}"/>
                </StackPanel>

                <Border Grid.Row="1" Background="White" CornerRadius="10" BorderBrush="#E5E7EB" BorderThickness="1" Effect="{StaticResource CardShadow}">
                    <DataGrid x:Name="SessionsGrid" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True" 
                              CanUserResizeRows="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              Background="White"
                              BorderThickness="0"
                              RowHeight="50"
                              ColumnHeaderHeight="45"
                              HorizontalGridLinesBrush="#F3F4F6"
                              VerticalGridLinesBrush="Transparent">
                        
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource GrayBackgroundBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="15,0"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#E5E7EB"/>
                            </Style>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="15,0"/>
                                <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                            <DataGridTextColumn Header="Emp ID" Binding="{Binding EmployeeId}" Width="100"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding EmployeeName}" Width="*"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="120"/>
                            <DataGridTextColumn Header="In" Binding="{Binding ClockIn}" Width="100"/>
                            <DataGridTextColumn Header="Out" Binding="{Binding ClockOut}" Width="100"/>
                            <DataGridTextColumn Header="Hrs" Binding="{Binding TotalHours}" Width="80"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Grid>

        <!-- Admin Toggle Button -->
        <Button x:Name="AdminToggleBtn" Click="AdminToggleBtn_Click"
                Width="48" Height="48"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="25"
                Background="{StaticResource NavyBlueBrush}"
                Foreground="White"
                ToolTip="Toggle Admin Panel"
                BorderThickness="0">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="24" Effect="{StaticResource CardShadow}">
                        <TextBlock Text="âš™ï¸" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.05" ScaleY="1.05" CenterX="24" CenterY="24"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</Page>